<div class="frame">
  <div>
    <canvas id="canvas" width="800" height="600"></canvas>
  </div>

  <div class="pallete">
    <div class="buttons">
      <%= form_tag({:action => :create}, {:remote => true, :id => "save-form"}) do %>
        <%= submit_tag "Save", :class => "button" %>
      <% end %>
      <button class="button" type="button" id="clear-button">Clear</button>
      <button class="button" type="button" id="undo-button">Undo</button>
    </div>
  </div>
</div>

<ul class="pictures">
  <% @pictures.each do |picture| %>
    <li class="picture frame">
      <%= link_to picture do %>
        <%= tag("img", :src => picture.data, :width => 200) %>
      <% end %>
      <%= link_to " Copy", "#", :class => "copy-button" %>
    </li>
  <% end %>
</ul>
